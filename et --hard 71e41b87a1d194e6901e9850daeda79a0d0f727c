[32m+[m[32maddToBetSlip({[m
[32m+[m[32m  eventId: 'game-123',[m
[32m+[m[32m  selectedTeam: 'Lakers',[m
[32m+[m[32m  odds: -110,[m
[32m+[m[32m  // ... other bet details[m
[32m+[m[32m});[m
[32m+[m[32m```[m
[32m+[m
[32m+[m[32m### Bet Type Selection[m
[32m+[m[32m```typescript[m
[32m+[m[32m// Switch between bet types with validation[m
[32m+[m[32msetBetType('parlay'); // Disabled if < 2 selections[m
[32m+[m[32msetBetType('teaser'); // Adjusted odds calculation[m
[32m+[m[32msetBetType('if-bet'); // Conditional betting logic[m
[32m+[m[32m```[m
[32m+[m
[32m+[m[32m### Layout Management[m
[32m+[m[32m```typescript[m
[32m+[m[32m// Automatic body class management[m
[32m+[m[32museEffect(() => {[m
[32m+[m[32m  if (isOpen && window.innerWidth > 768) {[m
[32m+[m[32m    document.body.classList.add('bet-slip-mode');[m
[32m+[m[32m  } else {[m
[32m+[m[32m    document.body.classList.remove('bet-slip-mode');[m
[32m+[m[32m  }[m
[32m+[m[32m}, [isOpen]);[m
[32m+[m[32m```[m

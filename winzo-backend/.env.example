# WINZO PLATFORM - SECURITY CONFIGURATION
# ==========================================
# This file contains examples of required environment variables
# Copy this to .env and update with your secure values

# CRITICAL SECURITY SETTINGS (REQUIRED)
# =====================================

# JWT Secret - MUST be 32+ characters with high entropy
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars_AbC123!@#$%^&*()

# Master invite code for user registration
# Generate with: openssl rand -hex 8
MASTER_INVITE_CODE=SECURE2024

# Environment setting
NODE_ENV=development

# DATABASE CONFIGURATION
# ======================

# For local development (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/winzo_db

# For production with SSL (Railway/Heroku style)
# DATABASE_URL=postgresql://user:pass@host:5432/db?sslmode=require

# Database SSL Configuration (Production)
# DB_SSL_CA=path/to/ca-cert.pem
# DB_SSL_KEY=path/to/client-key.pem  
# DB_SSL_CERT=path/to/client-cert.pem

# Database Connection Pool Settings
DB_MAX_POOL=10
DB_MIN_POOL=2
DB_ACQUIRE=60000
DB_IDLE=10000
DB_EVICT=1000

# Database Security Timeouts
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=25000
DB_CONNECT_TIMEOUT=10

# API SECURITY SETTINGS
# =====================

# Rate limiting configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Request size limits (bytes)
MAX_REQUEST_SIZE=1048576
JSON_LIMIT=1mb
URL_ENCODED_LIMIT=1mb

# SECURITY MONITORING (Production)
# ================================

# Content Security Policy reporting
# CSP_REPORT_URI=https://your-monitoring-service.com/csp-report

# Certificate Transparency monitoring  
# EXPECT_CT_REPORT_URI=https://your-monitoring-service.com/ct-report

# EXTERNAL API CONFIGURATION
# ==========================

# Sports odds API (The Odds API)
# ODDS_API_KEY=your_odds_api_key_here

# CORS CONFIGURATION
# ==================

# Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://winzo-platform.netlify.app

# SERVER CONFIGURATION
# ====================

# Server port
PORT=5000

# Database logging (true/false)
DB_LOGGING=false

# SECURITY NOTES
# ==============
# 1. Never commit real secrets to version control
# 2. Use different secrets for each environment
# 3. Rotate secrets regularly (monthly recommended)
# 4. Use environment-specific .env files
# 5. Validate all secrets have sufficient entropy
# 6. Monitor for secret exposure in logs

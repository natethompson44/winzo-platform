# Serve service worker
/sw.js /sw.js 200

# Serve cache buster
/cache-buster.js /cache-buster.js 200

# Serve offline page
/offline.html /offline.html 200

# API redirects
/api/* https://winzo-platform-production.up.railway.app/api/:splat 200

